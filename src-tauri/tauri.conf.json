{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WSL Nexus",
  "version": "1.0.0",
  "identifier": "dev.muchini.wsl-nexus",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "WSL Nexus",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "maximizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "dragDropEnabled": false,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost http://localhost:1420 ws://localhost:1420",
      "freezePrototype": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.ico"],
    "shortDescription": "Advanced WSL2 distribution management dashboard",
    "longDescription": "Desktop application for comprehensive WSL2 distribution management â€” monitoring, snapshots, configuration editing, and audit logging.",
    "license": "MIT",
    "publisher": "muchini",
    "category": "DeveloperTool",
    "windows": {
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false,
        "startMenuFolder": "WSL Nexus"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "allowDowngrades": true
    }
  }
}
